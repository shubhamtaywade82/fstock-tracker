<div class="search-area">
    <h3>Search friend:</h3 >
    <%= form_tag search_friend_path, remote: true, method: :get do %>
        <div class="form-group row">
            <div class="col-sm-9 no-right-pagging">
                <%= text_field_tag :friend, params[:friend], autofocus:true, class: "form-control form-control-lg", placeholder: "Name or email" %>
            </div>
            <div class="col-sm-2 no-left-padding ml-4">
                <%= button_tag type: :submit, class: "btn btn-success" do %>
                    <%= fa_icon 'search 2x' %>
                <% end %>
            </div>
        </div>
    <% end %>
</div>

<div id="friend-result">
</div>

<% if @friends %>
    <%= render 'friends/list' %>
<% end %>